<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp">
        <android.support.v7.widget.CardView
               style="@style/cardView_Dashboard"
               android:layout_marginRight="15dp"
               android:id="@+id/cv_learn"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:orientation="vertical">
              <ImageView
                  style="@style/Dashboard_ImageView"
                  android:src="@drawable/ic_school_black_24dp"
                  android:background="@drawable/circle_blue"
                  />
              <View
                  style="@style/Dashboard_LineDivider"/>
              <TextView
                  style="@style/Dashboard_TextView"
                  android:text="@string/heading_learn"/>
          </LinearLayout>

            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/cardView_Dashboard"
            android:id="@+id/cv_quiz"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    style="@style/Dashboard_ImageView"
                    android:src="@drawable/ic_quiz"
                    android:background="@drawable/circlered"
                    />
                <View
                    style="@style/Dashboard_LineDivider"/>
                <TextView
                    style="@style/Dashboard_TextView"
                    android:text="@string/heading_quiz"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            style="@style/cardView_Dashboard"
            android:id="@+id/cv_code"
            android:layout_marginRight="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    style="@style/Dashboard_ImageView"
                    android:src="@drawable/ic_code"
                    android:background="@drawable/circle_code"
                    />
                <View
                    style="@style/Dashboard_LineDivider"/>
                <TextView
                    style="@style/Dashboard_TextView"
                    android:text="@string/heading_coding"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            style="@style/cardView_Dashboard"
            android:id="@+id/cv_cheat_sheet"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    style="@style/Dashboard_ImageView"
                    android:src="@drawable/ic_cheatsheet"
                    android:background="@drawable/circle_cheat"
                    />
                <View
                    style="@style/Dashboard_LineDivider"/>
                <TextView
                    style="@style/Dashboard_TextView"
                    android:text="@string/heading_cheatSheet"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp"
        >
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:id="@+id/cv_rate"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    style="@style/Dashboard_ImageView"
                    android:src="@drawable/ic_favorites"
                    android:background="@drawable/circle_yellow"
                    />
                <View
                    style="@style/Dashboard_LineDivider"/>
                <TextView
                    style="@style/Dashboard_TextView"
                    android:text="@string/heading_rate"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>